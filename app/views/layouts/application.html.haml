!!! Strict
%html
  %head
    %title= h(yield(:title) || Link::Application.config.application_name )
    = csrf_meta_tag
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag :application
    = favicon_link_tag "favicon.ico"
    = yield(:head)
    :css
      /* Sticky footer styles
      -------------------------------------------------- */

      html,
      body {
        height: 100%;
        /* The html and body elements cannot have any padding or margin. */
      }

      /* Wrapper for page content to push down footer */
      #wrap {
        min-height: 100%;
        height: auto !important;
        height: 100%;
        /* Negative indent footer by its height */
        margin: 0 auto -60px;
        /* Pad bottom by footer height */
        padding: 0 0 60px;
      }

      /* Set the fixed height of the footer here */
      #footer {
        height: 60px;
        background-color: #f5f5f5;
      }


      /* Custom page CSS
      -------------------------------------------------- */
      /* Not required for template or sticky footer method. */

      #wrap > .container {
        padding: 80px 15px 0;
      }
      .container .credit {
        margin: 20px 0;
      }

      #footer > .container {
        padding-left: 15px;
        padding-right: 15px;
      }

      code {
        font-size: 80%;
      }
  %body{ id: body_id, class: body_class }
    #wrap
      .navbar.navbar-default
        .container
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            =# link_to Link::Application.config.application_name , root_path, :class => 'navbar-brand'
          .collapse.navbar-collapse
            %ul.nav.navbar-nav.pull-right
              - if user_signed_in?
                %li
                  %a{:href => edit_user_registration_path}
                    = fa_icon "cogs"
                    Edit profile
                %li
                  %a{:href => user_profile_path(current_user.username)}
                    = fa_icon "pupils"
                    Me
                %li= link_to 'Your Conversations', conversations_path
                %li= link_to 'Sign out', destroy_user_session_path, method: :delete
              - elsif admin_signed_in?
                %li= link_to 'Teachers section', teachers_path
                %li= link_to 'Manage pupils', manage_path
                %li= link_to 'Sign out', destroy_admin_session_path, method: :delete
              - else
                %li= link_to 'Cr√©er votre compte', login_path
                %li= link_to 'Connectez-vous', teachers_login_path
          / /.nav-collapse
      / Begin page content
      .container.container-main
        - flash.each do |name, msg|
          %div.alert.alert-info
            = content_tag :div, msg, id: "flash_#{name}" if msg.is_a?(String)
        - if show_title?
          %h1= h yield(:title)
        = yield
    #footer
      .container
        %p.text-muted.credit
          = Link::Application.config.application_name
          @ #{Time.now.year}.
